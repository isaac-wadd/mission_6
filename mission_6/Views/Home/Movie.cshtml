
@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@model mission_6.Models.Movie

<h2>
    Add Movie
</h2>

<div>
    <form method="post">
        <br>
        <br>
        <label asp-for="category">Category</label>
        <br>
        <select name="category" id="category" asp-for="category">
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
        <br>
        <br>
        <label asp-for="title">Title</label>
        <br>
        <input type="text" asp-for="title">
        <br>
        <br>
        <label asp-for="year">Release Year</label>
        <br>
        <input type="text" name="year" id="year" asp-for="year" value="2023">
        <br>
        <br>
        <label asp-for="director">Director</label>
        <br>
        <input type="text" asp-for="director">
        <br>
        <br>
        <label asp-for="rating">Rating</label>
        <br>
        <select name="rating" id="rating" asp-for="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
        </select>
        <br>
        <br>
        <label asp-for="edited">Edited</label>
        <br>
        true
        <input type="radio" name="edited" value="true" asp-for="edited">
        <br>
        false
        <input type="radio" name="edited" value="false" asp-for="edited" checked>
        <br>
        <br>
        <label asp-for="lentTo">Lent To</label>
        <br>
        <input type="text" name="lentTo" id="lentTo" asp-for="lentTo">
        <br>
        <br>
        <label asp-for="notes">Notes</label>
        <br>
        <textarea name="notes" id="notes" asp-for="notes" cols="30" rows="4" maxlength="25" placeholder="notes go here"></textarea>
        <br>
        <div>
            <span id="notesChars">25</span>
            characters left
        </div>
        <br>
        <button type="submit">Submit</button>
        <br>
    </form>
</div>
